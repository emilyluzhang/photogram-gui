<h1> Photo Details </h1>
<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src = "<%= @photo.image %>">
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <%= @photo.caption %>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= @photo.poster.username %>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%= @photo.created_at %>
  </dd>

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/<%=@photo.id %>" method="post">
    <label for="photo_box">
      Image
    </label>

    <input type="text" id="photo_box" name="query_image" value="<%= @photo.image %>">

    <label for="author_id_box">
      Caption
    </label>

    <textarea id="author_id_box" name="query_caption"><%= @photo.caption %></textarea>

  <button>
    Update photo
  </button>
</form>
  </dd>
  <dt>
    Delete photo
  </dt>
  <dd>
    <div>
  <a href="/delete_photo/<%= @photo.id %>">
    Delete photo
  </a>
</div>
  </dd>
</dl>

<h2> Comments </h2>

<table>
<tr>
  <th> Commenter </th>
  <th> Comment </th>
  <th> Posted </th>
</tr>

<% @photo.comments.each do |a_comment| %>
  <tr>
    <td> <%= a_comment.commenter.username %> </td>
    <td> <%= a_comment.body %> </td>
    <td> <%= a_comment.created_at %> </td>
  </tr>
<% end %>

</table>

<h3> Add a new comment </h3>
  <form action="/add_comment" method="post">
    <label for="photo_id_box">
      Photo ID
    </label>

    <input type="text" id="photo_id_box" name="query_photo_id" value="<%= @photo.id %>">

    <label for="author_id_box">
      Author ID
    </label>

    <input type="text" id="author_id_box" name="query_author" placeholder="Enter your author ID">

    <label for="comment_box">
      Caption
    </label>

    <textarea id="comment_box" name="query_comment" placeholder="Enter a comment..."></textarea>

  <button>
    Add comment
  </button>
</form>
